FROM python:3.12-slim
RUN apt-get update && apt-get install -y gcc libp2p-dev
tensorflow-lite
WORKDIR /app/sandbox
COPY requirements*.txt .
RUN pip install -r requirements.txt -r requirements-omni.txt -r requirements-langchain.txt
COPY . .
EXPOSE 8000 9001  # P2P
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--workers", "8"]