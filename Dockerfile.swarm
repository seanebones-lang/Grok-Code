FROM python:3.12-slim
RUN apt-get update && apt-get install -y gcc g++ && pip install --upgrade pip
WORKDIR /app/sandbox
COPY requirements*.txt .
RUN pip install --no-cache-dir -r requirements.txt -r requirements-nas.txt
COPY sandbox sandbox/
EXPOSE 8000
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]