generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Inventory {
  id    Int     @id @default(autoincrement())
  name  String
  stock Int     @default(0)
  createdAt DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  role     String @default("user")
}